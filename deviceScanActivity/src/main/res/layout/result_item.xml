	</TextView>
	<!-- time -->
	<TextView
	    android:id="@+id/tolTime"
	    android:layout_width="0dp"
	    android:layout_height="50dp"
	    android:textSize="15sp"
	    android:layout_weight="4"
	    android:gravity="center">
	</TextView>

	<TextView
	    android:id="@+id/bestTime"
	    android:layout_width="0dp"
	    android:layout_height="50dp"
	    android:textSize="15sp"
	    android:layout_weight="4"
