<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/resultRl">
	        <!-- 顶部统计-->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/topName"
        android:background="@color/colorPrimary">
        <TextView 
            android:id="@+id/backTv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20sp" 
            android:textColor="#ffffff"/>
	    <TextView
	        android:id="@+id/result"
	        android:text="@string/statistics"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_centerInParent="true"
	        android:layout_gravity="center"
	        android:gravity="center"
	        android:layout_alignParentTop="true"
	        android:textColor="#ffffff"
	        android:textSize="20sp"/>
    </RelativeLayout>
    <!-- 滚动条 -->
	<ScrollView
       android:id="@+id/scrollView1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/topName"
       android:scrollbars="vertical"
       android:layout_marginBottom="50dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:focusableInTouchMode="true" 
		   android:focusable="true"
           android:orientation="vertical">

           <!-- 数据筛选 -->
          <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:orientation="vertical"
              android:layout_gravity="center_vertical"
              android:gravity="center_vertical">
              <TextView 
                  android:id="@+id/dataFilterTv"
                  android:layout_gravity="center_vertical"
                  android:layout_marginStart="20dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/dataFilter"
                  android:textSize="12sp">
              </TextView>
          </LinearLayout>
          
          <!-- 赛道下拉按钮 -->
          <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="@xml/padding"
              android:layout_gravity="center_vertical"
              android:gravity="center_vertical"
              android:orientation="horizontal">
              <TextView
                  android:id="@+id/trackTv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="20dp"
                  android:text="@string/trackWithBlank"
                  android:textSize="18sp"></TextView>
              <Spinner
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:id="@+id/trackSpinner"></Spinner>"
          </LinearLayout>
          <!-- RC下拉列表框 -->
          <LinearLayout
               android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="@xml/paddingtopiszero"
              android:layout_gravity="center_vertical"
              android:gravity="center_vertical"
              android:orientation="horizontal">
              <TextView
                  android:id="@+id/rcTv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="20dp"
                  android:text="@string/RCStrWithBlank"
                  android:textSize="18sp"></TextView>
              <Spinner
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:id="@+id/rcSpinner"></Spinner>
          </LinearLayout>
          <!-- 模式下拉列表框 -->
           <LinearLayout
               android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="@xml/paddingtopiszero"
              android:layout_gravity="center_vertical"
              android:gravity="center_vertical"
              android:orientation="horizontal">
              <TextView
                  android:id="@+id/modeTv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="20dp"
                  android:text="@string/modeWithBlank"
                  android:textSize="18sp"></TextView>
              <Spinner
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:id="@+id/modeSpinner"></Spinner>
          </LinearLayout>
          <!-- 开始日期 -->
          <LinearLayout
               android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="@xml/paddingtopiszero"
              android:layout_gravity="center_vertical"
              android:gravity="center_vertical"
              android:orientation="horizontal">
              <TextView
                  android:id="@+id/startDateTextView"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="20dp"
                  android:text="@string/startDate"
                  android:textSize="18sp"></TextView>
              <Spinner
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:id="@+id/startDateSpinner"></Spinner>
          </LinearLayout>
          <!-- 终止日期 -->
           <LinearLayout
               android:layout_width="match_parent"
              android:layout_height="50dp"
              android:background="@xml/paddingtopiszero"
              android:layout_gravity="center_vertical"
              android:gravity="center_vertical"
              android:orientation="horizontal">
              <TextView
                  android:id="@+id/endDateTextView"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="20dp"
                  android:text="@string/endDate"
                  android:textSize="18sp"></TextView>
              <Spinner
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:id="@+id/endDateSpinner"></Spinner>
          </LinearLayout>
            <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="10dp"
		    android:background="@xml/background">
		 </LinearLayout>
			 <!-- 数据图标 -->
          <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:orientation="vertical"
              android:layout_gravity="center_vertical"
              android:background="@xml/padding"
              android:gravity="center_vertical">
              <TextView 
                  android:id="@+id/dataChart"
                  android:layout_gravity="center_vertical"
                  android:layout_marginStart="20dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/dataChart"
                  android:textSize="12sp">
              </TextView>
          </LinearLayout>
	    <!-- 日期 -->
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:background="@xml/paddingtopiszero">
		   <TextView
		       android:id="@+id/date_tv"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:gravity="center"
		       android:textSize="14sp">
		   </TextView>
	      <android.support.v4.view.ViewPager
			android:id="@+id/viewpagerDate"
			android:layout_width="match_parent"
			android:layout_height="200dp">
		 </android.support.v4.view.ViewPager>
		  <!--  <com.example.bluetooth.list.ChildViewPager
			android:id="@+id/viewpagerDate"
			android:layout_width="match_parent"
			android:layout_height="200dp">
		 </com.example.bluetooth.list.ChildViewPager>-->
	    </LinearLayout>
	    <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="10dp"
			    android:background="@xml/background">
	   </LinearLayout>
			 <!-- 数据图标 -->
          <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:orientation="vertical"
              android:layout_gravity="center_vertical"
              android:background="@xml/padding"
              android:gravity="center_vertical">
              <TextView 
                  android:id="@+id/dataList"
                  android:layout_gravity="center_vertical"
                  android:layout_marginStart="20dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/dataList"
                  android:textSize="12sp">
              </TextView>
          </LinearLayout>
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
	        <com.example.bluetooth.list.MyListView
	        android:id="@+id/list_view"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:dividerHeight="0.5dp" 
	        android:layout_marginBottom="45dp"/>
	 	  <TextView
	        android:id="@+id/myText"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:text="No items." />
		</LinearLayout>
	 </LinearLayout>
	</ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@xml/padding"
        android:layout_alignParentBottom="true">
     	<LinearLayout
     	    android:layout_width="0dp"
     	    android:id="@+id/bottomTimer"
     	    android:layout_height="match_parent"
     	    android:orientation="horizontal"
     	    android:layout_weight="1"
     	    android:gravity="center">
     	   <!-- 底部 定时器 -->
     	   <TextView
           android:text="@string/timer"
           android:layout_width="wrap_content"
		   android:layout_height="wrap_content"
		   android:textSize="18sp"
		   android:layout_gravity="center_vertical"
		   android:gravity="center_vertical"/>   
     	</LinearLayout>
     	
       <LinearLayout
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:id="@+id/bottomResults"
           android:gravity="center">
           		   <!-- 底部 成绩 -->
		 	<TextView
		       android:text="@string/statistics"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:textSize="18sp"
		       android:layout_gravity="center_vertical"
		       android:textColor="@color/colorPrimary"
		   	   android:gravity="center"/>
       </LinearLayout>
       
		<LinearLayout
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		     android:id="@+id/bottomRanking"
		    android:gravity="center">
		     	   <!-- 底部 排名 -->
		   	<TextView
		       android:text="@string/ranking"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"	
		       android:textSize="18sp"
		       android:layout_gravity="center_vertical"
		   	   android:gravity="center"/>
		</LinearLayout>
		<!-- 底部  我 -->
		<LinearLayout
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:id="@+id/bottomI"
		    android:gravity="center">
			  <TextView
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:text="@string/I"
		       android:textSize="18sp" 
		       android:layout_gravity="center_vertical"
		       android:gravity="center"/>
		</LinearLayout>
    </LinearLayout>
</RelativeLayout>
