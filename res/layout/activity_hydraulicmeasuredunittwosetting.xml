<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <!-- 顶部准备 -->
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#10a9c4"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:paddingBottom="@dimen/abc_action_bar_default_padding_end_material">
        <TextView 
            android:id="@+id/backTv"
            android:text="@string/back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@xml/paddingtopbottomrightiszero"
            android:gravity="center"
            android:textSize="20sp" 
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/readyTv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/hydraulicmeasureunitsetting"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

	        <!-- 监测网基本参数 -->
    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:orientation="horizontal" 
	        android:layout_marginTop="0dp"
	        android:clickable="true"
	        android:id="@+id/deviceLL">
	        <TextView
	            android:id="@+id/deviceTv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/monitoringNetworkBasePara"
	            android:layout_gravity="center"
	            android:gravity="center"
	            android:textSize="12sp"
		       	android:layout_marginStart="20dp"
		       	android:layout_marginLeft="20dp"/>
	 </LinearLayout>
        <!-- 工程名称或工程编号-->
     <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:orientation="horizontal" 
	        android:background="@xml/paddingbottomiszero"
	        android:layout_marginTop="0dp"
	        android:clickable="true"
	        android:id="@+id/newMonitoringNetworkLl">
	        <TextView
	            android:id="@+id/newMonitoringNetworkTv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/projectNameOrProjectNumber"
	            android:layout_gravity="center"
	            android:gravity="center"
	            android:textSize="18sp"
		       	android:layout_marginStart="20dp"
		       	android:layout_marginLeft="20dp"/>
	 	<RelativeLayout 
     	     android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_gravity="center"
	         android:layout_marginEnd="20dp"
	         android:layout_marginRight="20dp">
		   <EditText
     	    android:id="@+id/projectNameEt"
     	    android:layout_width="60dp"
     	    android:layout_height="wrap_content"
     	    android:layout_alignParentEnd="true"
     	    android:layout_alignParentRight="true"
     	    android:layout_gravity="center"
     	    android:gravity="center"
     	    android:textSize="18sp"
     	    android:hint=""
     	    android:background="@xml/edittextpadding"
     	    android:singleLine="true"></EditText>
     	</RelativeLayout>

	</LinearLayout>
	<!-- 监测网编号 -->
     <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:orientation="horizontal" 
	        android:background="@xml/paddingbottomiszero"
	        android:layout_marginTop="0dp"
	        android:clickable="true"
	        android:id="@+id/monitorNumberLl">
	        <TextView
	            android:id="@+id/monitorNumberTv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/monitoringNetworkNumber"
	            android:layout_gravity="center"
	            android:gravity="center"
	            android:textSize="18sp"
		       	android:layout_marginStart="20dp"
		       	android:layout_marginLeft="20dp"/>
	 	<RelativeLayout 
     	     android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_gravity="center"
	         android:layout_marginEnd="20dp"
	         android:layout_marginRight="20dp">
		   <EditText
     	    android:id="@+id/monitorNumberEt"
     	    android:layout_width="60dp"
     	    android:layout_height="wrap_content"
     	    android:layout_alignParentEnd="true"
     	    android:layout_alignParentRight="true"
     	    android:layout_gravity="center"
     	    android:gravity="center"
     	    android:textSize="18sp"
     	    android:hint=""
     	    android:background="@xml/edittextpadding"
     	    android:singleLine="true"></EditText>
     	</RelativeLayout>

	</LinearLayout>
		<!-- 测量单元总数 -->
     <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:orientation="horizontal" 
	        android:background="@xml/padding"
	        android:layout_marginTop="0dp"
	        android:clickable="true"
	        android:id="@+id/measureUnitTotalNumberLl">
	        <TextView
	            android:id="@+id/measureUnitTotalNumberTv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/measureUnitTotalNumber"
	            android:layout_gravity="center"
	            android:gravity="center"
	            android:textSize="18sp"
		       	android:layout_marginStart="20dp"
		       	android:layout_marginLeft="20dp"/>
	 	<RelativeLayout 
     	     android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_gravity="center"
	         android:layout_marginEnd="20dp"
	         android:layout_marginRight="20dp">
		   <EditText
     	    android:id="@+id/measureUnitTotalNumberEt"
     	    android:layout_width="60dp"
     	    android:layout_height="wrap_content"
     	    android:layout_alignParentEnd="true"
     	    android:layout_alignParentRight="true"
     	    android:layout_gravity="center"
     	    android:gravity="center"
     	    android:textSize="18sp"
     	    android:hint=""
     	    android:inputType="number"
     	    android:digits="@string/numberAndPercent"
     	    
     	    android:background="@xml/edittextpadding"
     	    android:singleLine="true"/>
     	</RelativeLayout>

	</LinearLayout>
       <!-- 确定按钮 -->
   	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="bottom">
       	<LinearLayout 
       	    android:layout_width="match_parent"
       	    android:layout_height="50dp"
       	    android:layout_alignParentBottom="true"
       	    android:background="@xml/padding"
       	    android:id="@+id/confirmLl">
       	   <TextView
	        android:id="@+id/confirmTv"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:text="@string/confirm"
	        android:textSize="18sp"
	        android:layout_gravity="center"/>
       	</LinearLayout>
	</RelativeLayout>
</LinearLayout>
