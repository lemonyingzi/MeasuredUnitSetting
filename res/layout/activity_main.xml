<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <!-- 顶部准备 -->
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#10a9c4"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:paddingBottom="@dimen/abc_action_bar_default_padding_end_material">
        <TextView
            android:id="@+id/readyTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/ready"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>
    <android.support.v4.widget.SwipeRefreshLayout
       android:id="@+id/swipe_refresh"
       android:layout_width="match_parent"
       android:layout_height="510dp">
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
          <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
<!-- 登录状态 -->
    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:orientation="horizontal" 
	        android:background="@xml/paddingbottomiszero"
	        android:layout_marginTop="0dp"
	        android:clickable="true"
	        android:id="@+id/loginStateLL">
	        <TextView
	            android:id="@+id/loginStateTv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/unlogin"
	            android:layout_gravity="center"
	            android:gravity="center"
	            android:textSize="18sp"
		       	android:layout_marginStart="20dp"
		       	android:layout_marginLeft="20dp"/>

	</LinearLayout>
	
    <!-- 连接状态 -->
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:orientation="horizontal" 
	        android:background="@xml/padding"
	        android:layout_marginTop="0dp"
	        android:clickable="true"
	        android:id="@+id/conntectStateLL">
	        <TextView
	            android:id="@+id/connectStateTv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/unconnected"
	            android:layout_gravity="center"
	            android:gravity="center"
	            android:textSize="18sp"
		       	android:layout_marginStart="20dp"
		       	android:layout_marginLeft="20dp"/>
	 </LinearLayout>
	
        <!-- 设备 -->
    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:orientation="horizontal" 
	        android:layout_marginTop="0dp"
	        android:clickable="true"
	        android:id="@+id/deviceLL">
	        <TextView
	            android:id="@+id/deviceTv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/device"
	            android:layout_gravity="center"
	            android:gravity="center"
	            android:textSize="12sp"
		       	android:layout_marginStart="20dp"
		       	android:layout_marginLeft="20dp"/>
	 </LinearLayout>
	 
        <!-- 液压水准 -->
     <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:orientation="horizontal" 
	        android:background="@xml/paddingbottomiszero"
	        android:layout_marginTop="0dp"
	        android:clickable="true"
	        android:id="@+id/hydraulicLevelLL">
	        <TextView
	            android:id="@+id/hydraulicLevelTv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/hydraulicLevel"
	            android:layout_gravity="center"
	            android:gravity="center"
	            android:textSize="18sp"
		       	android:layout_marginStart="20dp"
		       	android:layout_marginLeft="20dp"/>
	 </LinearLayout>
    <!-- 深层水平位移 -->
     <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:orientation="horizontal" 
	        android:background="@xml/padding"
	        android:layout_marginTop="0dp"
	        android:clickable="true"
	        android:id="@+id/displacementLL">
	        <TextView
	            android:id="@+id/displacementTv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/displacementLevel"
	            android:layout_gravity="center"
	            android:gravity="center"
	            android:textSize="18sp"
		       	android:layout_marginStart="20dp"
		       	android:layout_marginLeft="20dp"/>
	 </LinearLayout>
	 </LinearLayout>
	</ScrollView>
	</android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
