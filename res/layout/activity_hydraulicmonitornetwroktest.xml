<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <!-- 顶部液压水准测试-->
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#10a9c4"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:paddingBottom="@dimen/abc_action_bar_default_padding_end_material">
        <TextView 
            android:id="@+id/backTv"
            android:text="@string/back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@xml/paddingtopbottomrightiszero"
            android:gravity="center"
            android:textSize="20sp" 
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/readyTv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/hydraulimonitornetworktest"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

	
        <!-- 选择监测网 -->
    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:orientation="horizontal" 
	        android:layout_marginTop="0dp"
	        android:clickable="true"
	        android:id="@+id/deviceLL">
	        <TextView
	            android:id="@+id/deviceTv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/chooseMonitorNetwork"
	            android:layout_gravity="center"
	            android:gravity="center"
	            android:textSize="12sp"
		       	android:layout_marginStart="20dp"
		       	android:layout_marginLeft="20dp"/>
	 </LinearLayout>
	 <!-- 检测网络名称 -->
    	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
    <ListView
        android:id="@+id/monitorNetworkList"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:layout_height="wrap_content"
        android:dividerHeight="0.5dp" 
        android:orientation="vertical"
        android:scrollbars="vertical"/>
	</LinearLayout>

</LinearLayout>
