	            android:gravity="start"
	            android:textSize="18sp"
		       	android:layout_marginStart="20dp"
		       	android:layout_marginLeft="20dp"/>
	
	</LinearLayout>
	
    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
