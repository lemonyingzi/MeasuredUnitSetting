<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    	  <!-- 液压水准监测网-->
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#10a9c4"
        android:layout_marginStart="2dp"
        android:id="@+id/topName"
        android:layout_marginEnd="2dp"
        android:paddingBottom="@dimen/abc_action_bar_default_padding_end_material">
        <TextView 
            android:id="@+id/backTv"
            android:text="@string/back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@xml/paddingtopbottomrightiszero"
            android:gravity="center"
            android:textSize="20sp" 
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/readyTv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/hydraulicMonitorNetwork"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>
    
	<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:orientation="horizontal" 
	        android:layout_marginTop="0dp"
	        android:layout_below="@id/topName"
	        android:clickable="true"
	        android:id="@+id/deviceLL">
	        <TextView
	            android:id="@+id/deviceTv"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/monitorNetworkDetails"
	            android:layout_gravity="center"
	            android:gravity="center"
	            android:textSize="12sp"
		       	android:layout_marginStart="20dp"
		       	android:layout_marginLeft="20dp"/>
	 </LinearLayout>
	 <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_below="@id/deviceLL"
	        android:layout_above="@id/backLl"
	        android:background="@xml/padding" >
	     	  <!-- 工程名称或工程编号-->
	     <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:orientation="horizontal" 
	        android:clickable="true">
	        <TextView
	            android:id="@+id/connectMeasureUnitOKTV"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="2"
	            android:text="@string/projectNameOrProjectNumber"
	            android:layout_gravity="center"
	            android:gravity="start"
	            android:textSize="18sp"
		       	android:layout_marginStart="20dp"
		       	android:layout_marginLeft="20dp"/>
	       <TextView
	            android:id="@+id/projectNameTv"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_gravity="end"
	            android:layout_weight="1"
	            android:gravity="end"
	            android:textSize="18sp"
		       	android:layout_marginEnd="20dp"
		       	android:layout_marginRight="20dp"/>
		</LinearLayout>
		
	     <!-- 监测网编号 -->
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:orientation="horizontal" 
	        android:layout_marginTop="0dp"
	        android:clickable="true"
	        android:layout_gravity="center"
	        android:gravity="start">
	        <TextView
	            android:id="@+id/monitorNetworkNumberTV"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:text="@string/monitoringNetworkNumber"
	            android:layout_gravity="center"
	            android:gravity="start"
	            android:textSize="18sp"
		       	android:layout_marginStart="20dp"
		       	android:layout_marginLeft="20dp"/>
	       <TextView
	            android:id="@+id/monitorNetworkNumberTv"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:layout_gravity="end"
	            android:layout_marginRight="20dp"
	            android:gravity="end"
	            android:textSize="18sp"
		       	android:layout_marginEnd="20dp"/>
	
	</LinearLayout>
		<!-- 测点总数 -->
	<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:orientation="horizontal" 
	        android:layout_marginTop="0dp"
	        android:clickable="true"
	        android:layout_gravity="center"
	        android:gravity="start">
	        <TextView
	            android:id="@+id/measurePointTotalNumberTV"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:text="@string/measurePointTotalNumber"
	            android:layout_gravity="center"
	            android:gravity="start"
	            android:textSize="18sp"
		       	android:layout_marginStart="20dp"
		       	android:layout_marginLeft="20dp"/>
	       <TextView
	            android:id="@+id/measureUnitTotalNumberTv"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:gravity="end"
	            android:textSize="18sp"
		       	android:layout_marginEnd="20dp"
		       	android:layout_marginRight="20dp"/>
	</LinearLayout>
	
			<!-- 已设置测量单元-->
	<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:orientation="horizontal" 
	        android:layout_marginTop="0dp"
	        android:clickable="true"
	        android:layout_gravity="center"
	        android:gravity="start">
	        <TextView
	            android:id="@+id/measurementUnitHasBeenSettedTV"
 				android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:text="@string/settingSuccess"
	            android:layout_gravity="center"
	            android:gravity="start"
	            android:textSize="18sp"
		       	android:layout_marginStart="20dp"
		       	android:layout_marginLeft="20dp"/>
	       <TextView
	            android:id="@+id/measurementUnitHasBeenSettedTv"
 				android:layout_width="0dp"
	            android:layout_weight="1"	            
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:gravity="end"
	            android:textSize="18sp"
		       	android:layout_marginEnd="20dp"
		       	android:layout_marginRight="20dp"/>
	</LinearLayout>
	
		<!-- 横线 -->
  	<LinearLayout  
        android:id="@+id/dashLine"  
        android:layout_width="match_parent"  
        android:layout_height="10dip"  
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_above="@id/backLl"
        android:background="@xml/dash_line"  
        android:layerType="software"  
        android:orientation="horizontal" />  
   	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
		 <ListView
	        android:id="@+id/measureUnitList"
	        android:layout_width="match_parent"
	        android:textSize="18sp"
	        android:layout_height="wrap_content"
	        android:dividerHeight="0.5dp" 
	        android:orientation="vertical"
	        android:scrollbars="vertical"/>
	</LinearLayout>
	
  </LinearLayout>
      <!--返回-->
   	<LinearLayout 
   	    android:layout_width="match_parent"
   	    android:layout_height="50dp"
   	    android:layout_alignParentBottom="true"
   	    android:id="@+id/backLl"
   	    android:background="@xml/paddingtopiszero">
 	    <TextView
   		android:id="@+id/backTV"
   		android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		android:gravity="center"
   		android:text="@string/backStr"
   		android:textSize="18sp"
   		android:layout_gravity="center"/>
   	</LinearLayout>
	
</RelativeLayout>