<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
       <!-- 顶部关于 -->
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@xml/paddingcolor"
        android:paddingBottom="@dimen/abc_action_bar_default_padding_end_material" >
        <TextView 
            android:id="@+id/backTv"
            android:text="@string/back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@xml/paddingtopbottomrightiszero"
            android:gravity="center"
            android:textSize="20sp" 
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/timer"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/forgetPassword"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>
    
	<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:layout_gravity="center"
    android:id="@+id/ll"
    android:gravity="center">
   <LinearLayout  
        android:layout_width="match_parent"  
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="bottom" >  
        <TextView  
            android:id="@+id/tv_zh"  
            android:layout_width="0dp"  
            android:layout_weight="9"
            android:layout_height="wrap_content"  
			android:layout_marginStart="10dp"
			android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"  
       		android:gravity="bottom"
            android:text="@string/enterPhoneNumber"
            android:textSize="12sp" />  
        <EditText  
            android:id="@+id/phoneNumberEt"  
            android:layout_width="130dp"  
            android:layout_height="wrap_content"  
            android:background="@xml/edittextpadding"
            android:layout_gravity="center_vertical"  
            android:gravity="bottom"
            android:inputType="phone"
            android:hint=""/>  
        <Button  
            android:id="@+id/getVerifyCodeBt"  
            android:layout_width="0dp"
            android:layout_weight="11"  
            android:layout_height="wrap_content"  
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"  
            android:text="@string/sendMessageGetVerifyCode"
            android:textSize="12sp" />  
    </LinearLayout>  
    
   
    <LinearLayout 
        android:layout_width="match_parent"  
        android:layout_height="50dp" 
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical">  
    
        <TextView  
            android:id="@+id/tv_mima"  
            android:layout_width="0dp"
            android:layout_weight="9"  
            android:layout_height="wrap_content"  
            android:layout_marginLeft="10dp"  
            android:layout_marginStart="10dp"
            android:gravity="bottom"  
            android:text="@string/enterVerifyCode"
            android:textSize="12sp" />  
        <EditText  
            android:id="@+id/verifyCodeEt"  
            android:layout_width="130dp"  
            android:layout_height="wrap_content"  
            android:background="@xml/edittextpadding" /> 
        <TextView 
            android:id="@+id/temp"  
            android:layout_width="0dp"
            android:layout_weight="11"  
            android:layout_height="wrap_content"  
            android:layout_marginLeft="10dp"  
            android:layout_marginStart="10dp"
            android:gravity="bottom"
            android:textSize="12sp" />  
	</LinearLayout>    
</LinearLayout>


	<!--  重置密码 -->
   	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_gravity="bottom">
       	<LinearLayout 
       	    android:layout_width="match_parent"
       	    android:layout_height="50dp"
       	    android:layout_alignParentBottom="true"
       	    android:background="@xml/padding"
       	    android:id="@+id/resetPasswordLl">
       	   <TextView
	        android:id="@+id/confirmTv"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:layout_marginLeft="10dp"  
            android:layout_marginStart="10dp"
	        android:text="@string/resetPassword"
	        android:textSize="18sp"
	        android:layout_gravity="center"/>
       	</LinearLayout>
	</RelativeLayout>
	
   	
   	
</LinearLayout>